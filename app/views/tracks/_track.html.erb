<div id="<%= dom_id track %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= track.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Data:</strong>
    <%= link_to track.data.filename, track.data, class: "text-gray-700 underline hover:no-underline" if track.data.attached? %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Tag:</strong>
    <%= @tag.name %>
  </div>
</div>
